<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- RECORDINGS Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RECORDINGS"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="?android:attr/textColorPrimary"
            tools:ignore="HardcodedText" />

        <!-- Recordings Folder -->
        <LinearLayout
            android:id="@+id/layoutRecordingsFolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recordings Folder"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewCurrentRecordingsFolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/storage/emulated/0/Android/data/com.github.axet.audiorecorder/files"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Audio Format -->
        <LinearLayout
            android:id="@+id/layoutAudioFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio Format"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewCurrentAudioFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16-bit PCM"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Recording Source -->
        <LinearLayout
            android:id="@+id/layoutRecordingSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recording Source"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewCurrentRecordingSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mic"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Sample Rate -->
        <LinearLayout
            android:id="@+id/layoutSampleRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample Rate"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/textViewCurrentSampleRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16 kHz"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Encoding -->
        <LinearLayout
            android:id="@+id/layoutEncoding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Encoding"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewCurrentEncoding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=".ogg (Vorbis)"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Audio Channels -->
        <LinearLayout
            android:id="@+id/layoutAudioChannels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Audio Channels"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewCurrentAudioChannels"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mono"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Filename Format -->
        <LinearLayout
            android:id="@+id/layoutFilenameFormat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filename Format"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewCurrentFilenameFormat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yyyy-MM-dd HH.mm.ss"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- FILTERS Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FILTERS"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textColor="?android:attr/textColorPrimary"
            tools:ignore="HardcodedText" />

        <!-- Notifications Enabled -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enable Notifications"
                android:textSize="16sp" />

            <Switch
                android:id="@+id/switchNotificationsEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Notification Sound -->
        <LinearLayout
            android:id="@+id/layoutNotificationSound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Sound"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewCurrentNotificationSound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Notification Priority -->
        <LinearLayout
            android:id="@+id/layoutNotificationPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification Priority"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewCurrentNotificationPriority"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <!-- Quick Actions -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Actions in Notifications"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />

        <CheckBox
            android:id="@+id/checkBoxShowPlayAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Play Action"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText" />

        <CheckBox
            android:id="@+id/checkBoxShowShareAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Share Action"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText" />

        <CheckBox
            android:id="@+id/checkBoxShowDeleteAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Delete Action"
            android:layout_marginBottom="8dp"
            tools:ignore="HardcodedText" />

        <CheckBox
            android:id="@+id/checkBoxShowOpenAppAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show Open App Action"
            android:layout_marginBottom="16dp"
            tools:ignore="HardcodedText" />

        <!-- Encoding on the Fly -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enabling encoding on the fly disables editing, and crash recovery"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <Switch
                android:id="@+id/switchEncodingOnTheFly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Pause During a Call -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop recording on answering and continue on hangup"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <Switch
                android:id="@+id/switchPauseDuringCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Silent Mode -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Enable 'silent mode' during recording"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <Switch
                android:id="@+id/switchSilentMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Lockscreen Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Show the controls when the phone is locked"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <Switch
                android:id="@+id/switchLockscreenControls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!-- Application Theme -->
        <LinearLayout
            android:id="@+id/layoutApplicationTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Application Theme"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/textViewCurrentApplicationTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theme White"
                android:textSize="14sp"
                android:textColor="?android:attr/textColorSecondary"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>